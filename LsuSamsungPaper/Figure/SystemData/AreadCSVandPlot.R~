#Where the file is saved
pdf("/home/hadoop/rough/MyGITProjects/PGA_EvaluationArchitecturePaper/Evaluation-architectures-for-big-data/LsuSamsungPaper/Figure/SystemData/Plots/BGCPUHDD.pdf", family="Times")

#Read data from CSV
data <- read.csv(file="BG_1HDD_CPUCopy.csv",head=FALSE,sep=",")

x <- 1:length(data$V1)

lt <- c(1,2)

plot(x, data$V1, type='l', col='blue', lwd=2, lty=lt[1], ann=FALSE, cex.axis=1.5, ylim=c(0,70))
lines(x, data$V2, col='black', lwd=2, lty=lt[2])

title(xlab="Time (minutes)", cex.lab=2)
title(ylab="%", cex.lab=2)
#title(main="IOPS Over Time")

legend("topright", c("CPU utilization", "I/O wait"), col=c("blue","black"), lwd=c(2,2), lty=lt, cex = 1.5)

#print(data$V5)
dev.off()
